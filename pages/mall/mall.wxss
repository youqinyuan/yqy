/* pages/mall/mall.wxss */
page{
  height: 100%;
}
.ek-scroll{
  height: 100%;
}
.ek-list{
  padding-bottom:40rpx;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #cdcdcd;
  width: 90%;
  margin-left: 40rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}
.ek-item{
  width: 30%;
  height: 200rpx;
}
.ek-img{
  width: 100%;
  height: 100%;
}
.ek-title{
  font-size: 30rpx;
  width: 30%;
  margin-right: 40rpx;
  height: 80rpx;
  padding: 15rpx;
  line-height: 60rpx;
  margin-left: 30rpx;
}
.ek-btn{
  font-size: 30rpx;
  height: 80rpx;
  width: 25%;
  margin-top: 60rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  background-color: #f1e608;
  border:2rpx solid #f1e608;
}