/* pages/mine/mine.wxss */
page{
  background-color: #f5f3f3;
}
.ek-list{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  width: 100%;
  height: 150rpx;
  margin-bottom: 20rpx;
}
.ek-list-item{
  display: flex;
}
.ek-item{
  margin: 20rpx;
  border: 2rpx solid #cdcdcd;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}
.ek-img{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.ek-top-name{
  margin-left: -40rpx;
  margin-top: 30rpx;
}
.ek-name{
  margin-left: 40rpx;
  font-size: 30rpx;
}
.ek-huiyuan{
  margin-left: 40rpx;
  border-radius: 10px;
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  background: rgb(235, 212, 5);
} 
button{
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  width: 150rpx;
  height: 60rpx;
  font-size: 28rpx;
  margin-top: 60rpx;
  margin-right: 40rpx;
  color: #fff;
  background: rgb(235, 212, 5);
}
.ek-myorder{
  width: 100%;
  font-size: 30rpx;
  line-height: 60rpx;
  height: 60rpx;
  border-bottom: 2rpx solid #eaeaea;
  background: #fff;
}
text{
  margin-left: 20rpx;
}
.ek-good{
  width: 100%;
  height: 150rpx;
  text-align: center;
  background-color: #fff;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
}
.ek-good-list{
  margin-top: 25rpx;
}
.ek-good-item{
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  width: 40rpx;
  height: 40rpx;
}
.ek-good-img{
  width: 100%;
  height: 100%;
}
.ek-good-text{
  font-size: 28rpx;
}
.ek-myorder-list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid #eaeaea; 
  display: flex;
  background: #fff;
}
.ek-myorder-item{
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.ek-maorder-img{
  width: 100%;
  height: 100%;
}
text{
  font-size: 30rpx;
}
.ek-button{
  font-size: 30rpx;
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 auto;
  border: 4rpx solid rgb(252, 222, 135);
  margin-top: 40rpx;
}
.ek-photo{
  display: flex;
}
.ek-photo-item{
  width: 150rpx;
  height: 150rpx;
}
.ek-photo-img{
  width: 100%;
  height: 100%;
}
.ek-photo-name{
  font-size: 28rpx;
  margin-top: 40rpx;
}